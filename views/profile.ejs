    <link  rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.1/noty.min.css">
   <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.1/noty.min.js" ></script>
    <style>
        body{
            background-color: lightcoral;
        }
    </style>
   <img src="<%=user.avatar %>" alt="<%=user.name %>" width="300" height="300" >
</head>
<body>
 <h1>Welcome to profile page </h1>

 <% if(locals.user.id==profile_user.id){ %>
    <form action="/user/update/<%=profile_user.id %>" method="post" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="your name" value="<%=profile_user.name %>" required>
        <input type="text" name="email" placeholder="Your email" value="<%=profile_user.email %>" required>
        <input type="file" name="avatar" placeholder="profile picture">
        <input type="submit" value="update" >
    </form>

        <% }else{ %>
         <p>Name : <%= profile_user.name %></p>
         <p>Email : <%= profile_user.email %></p>

            <%}%>
    <!-- add friend -->
    <% if(locals.user.id!=profile_user.id){ %>
            <a href="/users/friends/<%=profile_user._id%>" class="add-friend-button">Add friend </a>
            
            <%}%>
 
   
 
 <a href="/user/sign-out">SignOut</a>

 <script>
    <% if(flash.success && flash.success.length >0){ %>
        new Noty({
            theme : 'relax',
            text :"<%=flash.success %>",
            type:"success",
            layout :'topRight',
            timeout : 1500,
    
        }).show();
     <% } %>
    
     <% if(flash.error && flash.error.length>0 ){ %>
        new Noty({
            theme : 'sunset',
            text :"<%=flash.error %>",
            type:"error",
            layout :'topRight',
            timeout : 1500,
    
        }).show();
    
    <% } %>
    
     
    
    </script>

</body>
</html>